{
  "compilerOptions": {
    "lib": [
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018",
      "ES2019",
      "ES2020",
      "ESNext"
    ],

    "allowJs": true,
    "checkJs": true,
    // "noEmit": true,

    "noImplicitAny": false,
    "esModuleInterop": true,
    "downlevelIteration": true,

    // TODO Enable this in the future when we double down on required properties in our models
    // "strictNullChecks": true,
    "types": ["node"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "**/__tests__/**/*",
    "**/__mocks__/**/*",
    "**/node_modules/**/*",
    "src/db/seeders/*"
  ]
  // "references": [{ "path": "../components/" }]
}
